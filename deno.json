{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "dom", "es2020"],
    "strict": true
  },
  "importMap": "import_map.json",
  "lint": {
    "include": ["ts/"],
    "exclude": ["ts/testdata/"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "include": ["ts/"],
    "exclude": ["ts/testdata/", "ts/js/", "ts/.vscode/"],
    "useTabs": true,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "test": {
    "include": ["ts/"],
    "exclude": ["ts/testdata/"],
  }
}
